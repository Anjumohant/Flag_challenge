<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Square background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#101010" /> <!-- Square color -->
        </shape>
    </item>

    <!-- Circle inside the square -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/button_bg" /> <!-- Circle color -->
        </shape>
        <gravity android:gravity="center" />
    </item>

</layer-list>
